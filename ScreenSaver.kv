ScreenManager:
    HomeScreen:
    AddScreen:
    PlaylistScreen:
    CreatePlaylistScreen:
  
<homePlayList@MDCard>
    size_hint_y: None
    height: '150dp'
    radius: 10
    md_bg_color: "#262626" 

<HomeScreen>:
    name: 'Home'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: '#00000'

        MDBoxLayout: 
            orientation: 'vertical' 

            MDCard:
                size_hint_y: None
                height: '200dp'
                md_bg_color: "blue" 
                radius: 0, 0, 10, 10 
                elevation: 5

                MDBoxLayout:
                    adaptive_height: True
                    padding: (10, 0, 10, 0)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    
                    MDIconButton:
                        on_press: app.root.current = 'Home'
                        Image:
                            source: 'static/music.png'
                            size_hint: (1.7, 1.7)
                    MDLabel:
                        text: 'MAST'
                MDBoxLayout:
                    pos_hint: {'center_y': 0.27}
                    Image:  
                        source: 'static/moodgroove.png'
                        width: '200dp'
                        height: '150dp'
                            

            MDBoxLayout:
                MDScrollView:
                    MDGridLayout:
                        cols: 1
                        adaptive_height: True
                        spacing: '15dp'
                        padding: (15, 0, 15, 0)

                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            
                            MDLabel:
                                text: 'Available playlist'
                                color: '#ffffff'
                                size_hint_y: None
                                height: self.texture_size[1]
                                font_style: 'Caption'
                                padding: (0, 20, 0, 0)
                

                        homePlayList:
                            MDBoxLayout:
                                padding: (20, 0, 0, 0)
                                Image:
                                    source: 'static/happy.png'
                            MDBoxLayout:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                MDLabel:
                                    text: 'play now'
                                    color: 'white'
                                    font_style: 'Caption'

                        homePlayList:
                            MDBoxLayout:
                                padding: (20, 0, 0, 0)
                                Image:
                                    source: 'static/sadnigga.png'
                            MDBoxLayout:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                MDLabel:
                                    text: 'play now'
                                    color: 'white'
                                    font_style: 'Caption'
                        homePlayList:
                            MDBoxLayout:
                                padding: (20, 0, 10, 0)
                                Image:
                                    source: 'static/motivatednigga.png'
                                    size_hint: (0.7, 0.7)
                            MDBoxLayout:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                MDLabel:
                                    text: 'play now'
                                    color: 'white'
                                    font_style: 'Caption'
                        homePlayList:

        MDBoxLayout:
            size_hint_y: 0.1
            radius: 24
            MDBottomNavigation:
                panel_color: .2, .2, .2, 1
                buttom_border_radius: 20 

                MDBottomNavigationItem:             
                    icon: 'home'
                    on_tab_press: app.root.current = 'Home'

                MDBottomNavigationItem:
                    icon: 'plus'
                    on_tab_press: app.root.current = 'add'

                MDBottomNavigationItem:
                    icon: 'music-note'
                    on_tab_press: app.root.current = 'playlist'

<AddScreen>:
    name: 'add'
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: '#00000'
            padding: (0, 0, 0, 200)
            MDLabel:
                color: 'white'
                text: 'Introducing the MAST ADD Button! This user-friendly feature empowers you to effortlessly select and contribute audio files to our shared app database.'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding: (20, 200, 20, 30)

            MDRectangleFlatButton:
                text: 'ADD'
                pos_hint: {'center_x': 0.5}
                on_press: app.getaudio()
                padding: (10, 5)
        MDBoxLayout:
            size_hint_y: 0.1
            radius: 24
            MDBottomNavigation:
                panel_color: .2, .2, .2, 1
                buttom_border_radius: 20 

                MDBottomNavigationItem:             
                    icon: 'home'
                    on_tab_press: app.root.current = 'Home'

                MDBottomNavigationItem:
                    icon: 'plus'
                    on_tab_press: app.root.current = 'addSong'

                MDBottomNavigationItem:
                    icon: 'music-note'
                    on_tab_press: app.root.current = 'playlist'
        
            


<PlayListItem@MDCard>
    size_hint_y: None
    height: '72dp'
    md_bg_color: '#262626'
    radius: 15 
    

<PlaylistScreen>:
    orientation: 'vertical'
    name: 'playlist'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: '#000000'

        MDBoxLayout:
            orientation: 'vertical'
            MDScrollView:
                MDGridLayout:
                    cols: 1
                    adaptive_height: True
                    padding: 0, '24dp', 0, '24dp'
                    spacing: '15dp'
                    padding: (10, 0, 10, 0)

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True

                        MDLabel:
                            text: 'PLAYLIST'
                            bold: True
                            color: '#ffffff'
                            halign: 'left'
                            font_style: 'H5'

                    PlayListItem:
                        on_press: app.root.current = 'Home'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'playlist name'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_style: 'H6'
                    PlayListItem:
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'playlist name'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_style: 'H6'
                    PlayListItem:
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'playlist name'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_style: 'H6'
                    PlayListItem:
                        on_press: app.root.current = 'createPlaylist'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'Create playlist'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_style: 'H6'


            MDBoxLayout:
                size_hint_y: 0.1
                radius: 24
                MDBottomNavigation:
                    panel_color: .2, .2, .2, 1
                    buttom_border_radius: 20 

                    MDBottomNavigationItem:             
                        icon: 'home'
                        on_tab_press: app.root.current = 'Home'

                    MDBottomNavigationItem:
                        icon: 'plus'
                        on_tab_press: app.root.current = 'add'

                    MDBottomNavigationItem:
                        icon: 'music-note'
                        on_tab_press: app.root.current = 'playlist'



<CreatePlaylistScreen>:
    name: 'createPlaylist'
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: '#00000'

        MDBoxLayout:
            orientation: 'vertical'
            MDCard:
                size_hint: None, None
                size: 300, 400
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                elevation: 10
                padding: (0, 20, 0, 20)
                spacing: 25
                orientation: 'vertical'


        MDBoxLayout:
            size_hint_y: 0.1
            MDBottomNavigation:
                panel_color: .2, .2, .2, 1
                buttom_border_radius: 10

                MDBottomNavigationItem:
                    icon: 'home'
                    on_tab_press: app.root.current = 'Home'
                MDBottomNavigationItem:
                    icon: 'plus'
                    on_tab_press: app.root.current = 'add'
                MDBottomNavigationItem:
                    icon: 'music-note'
                    on_tab_press: app.root.current = 'playlsit'
