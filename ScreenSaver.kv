ScreenManager:
    HomeScreen:
    AddScreen:
    PlaylistScreen:
    CreatePlaylistScreen:
    AudioPlayer:
  
<homePlayList@MDCard>
    size_hint_y: None
    height: '150dp'
    radius: 10
    md_bg_color: "#262626" 

<HomeScreen>:
    name: 'Home'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: '#222121'

        MDBoxLayout: 
            orientation: 'vertical' 
            MDLabel:
                text: 'M.A.S.T'
                color: 'white'
                height: self.texture_size[1]
                halign: 'center'
                font_size: 40
                bold: True
            Image:
                source: 'static/music.png'
            MDLabel:
                text: 'MAST(mood analysis sound technology) a cutting egde software designed to elevate your mood through the power of personalizedÂ music'
                color: 'white'
                font_size: 14
                height: self.texture_size[1]
                padding: (10, 0, 10, 0)
                halign: 'center'
           
        MDBoxLayout:
            size_hint_y: 0.1
            radius: 24
            MDBottomNavigation:
                panel_color: .2, .2, .2, 1
                buttom_border_radius: 20 

                MDBottomNavigationItem:             
                    icon: 'home'
                    on_tab_press: app.root.current = 'Home'
                    text: 'Home'
                    font_size: 10

                MDBottomNavigationItem:
                    icon: 'plus'
                    on_tab_press: app.root.current = 'add'
                    text: 'add songs'
                    font_size: 10

                MDBottomNavigationItem:
                    icon: 'music-note'
                    on_tab_press: app.playlistpage()
                    text: 'playlist'
                    font_size: 10

<AddScreen>:
    name: 'add'
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: '#222121'
            padding: (0, 0, 0, 200)
            MDLabel:
                color: 'white'
                text: 'Introducing the MAST ADD Button! This user-friendly feature empowers you to effortlessly select and contribute audio files to our shared app database.'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding: (20, 200, 20, 30)

            MDRectangleFlatButton:
                text: 'ADD'
                pos_hint: {'center_x': 0.5}
                on_press: app.addSong()
                padding: (10, 5)
        MDBoxLayout:
            size_hint_y: 0.1
            radius: 24
            MDBottomNavigation:
                panel_color: .2, .2, .2, 1
                buttom_border_radius: 20 

                MDBottomNavigationItem:             
                    icon: 'home'
                    on_tab_press: app.root.current = 'Home'
                    text: 'Home'

                MDBottomNavigationItem:
                    icon: 'plus'
                    on_tab_press: app.root.current = 'add'
                    text: 'add song'

                MDBottomNavigationItem:
                    icon: 'music-note'
                    on_tab_press: app.root.current = 'playlist'
                    text: 'playlist'


<PlayListItem@MDCard>
    id: playlistbox
    size_hint_y: None
    height: '72dp'
    md_bg_color: '#262626'
    radius: 15 
    line_color: .2, .2, .2, .8
    elevation: 2

<PlaylistScreen>:
    id: 'playlist'
    orientation: 'vertical'
    name: 'playlist'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: '#222121'

        MDBoxLayout:
            orientation: 'vertical'
            MDScrollView:
                MDGridLayout:
                    id: innerbox
                    cols: 1
                    adaptive_height: True
                    padding: 0, '24dp', 0, '24dp'
                    spacing: '20dp'
                    padding: (10, 30, 10, 0)

                    MDBoxLayout:
                        adaptive_height: True

                        MDLabel:
                            size_hint_y: None
                            text: 'PLAYLIST'
                            bold: True
                            height: self.texture_size[1]
                            color: '#ffffff'
                            halign: 'left'
                            font_size: 20

                    MDTextField:
                        id: Searchs
                        hint_text: 'search'
                        icon_left: 'magnify'
                        width: 100
                        font_size: 13
                        pos_hint: {'center_x': 0.5}        

                    PlayListItem:
                        on_press: app.auidoPlayerS('happy')
                        md_bg_color: '#fc466b'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (10, 1, 0, 0)

                            MDLabel:
                                text: 'Happy playlist'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_size: 17
                    PlayListItem:
                        on_press: app.auidoPlayerS('sad')
                        md_bg_color: '#3f5efb'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'Sad playlist'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_size: 17
                    PlayListItem:
                        on_press: app.auidoPlayerS('chill')
                        md_bg_color: '#45fc48'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'Chill playlist'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_size: 17
                    PlayListItem:
                        on_press: app.root.current = 'createPlaylist'
                        md_bg_color: '#706e40'
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: (20, 1, 0, 0)

                            MDLabel:
                                text: 'Create playlist'
                                bold: True
                                color: '#ffffff'
                                halign: 'left'
                                font_size: 17


            MDBoxLayout:
                size_hint_y: 0.1
                radius: 24
                MDBottomNavigation:
                    panel_color: .2, .2, .2, 1
                    buttom_border_radius: 20 
                    
                    MDBottomNavigationItem:             
                        icon: 'home'
                        on_tab_press: app.root.current = 'Home'
                        text: 'Home'

                    MDBottomNavigationItem:
                        icon: 'plus'
                        on_tab_press: app.root.current = 'add'
                        text: 'add song'

                    MDBottomNavigationItem:
                        icon: 'music-note'
                        on_tab_press: app.root.current = 'playlist'
                        text: 'playlist'



<CreatePlaylistScreen>:
    id: 'createPlaylist'
    name: 'createPlaylist'
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: '#222121'

        MDBoxLayout:
            orientation: 'vertical'
            padding: (0, 30, 0, 0)

            MDCard:
                size_hint: None, None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size: 280, 450
                md_bg_color: '#262626'
                elevation: 2
                padding: 25
                orientation: 'vertical'
                MDScrollView:
                    MDGridLayout:
                        adaptive_height: True
                        cols: 1
                        MDBoxLayout:
                            id: type_parm
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: '15dp'
                            MDLabel:
                                id: playlist_label
                                text: 'Create Playlist'
                                bold: True
                                color: 'white'
                                halign: 'center'
                                size_hint_y: None
                                font_size: 20
                                height: self.texture_size[1]
                            MDTextField:
                                id: playlist_names
                                hint_text: 'playlist name'
                                helper_text: "happy playlist"
                                icon_right: 'account'
                                size_hint_x: None
                                width: 200
                                font_size: 13
                                pos_hint: {'center_x': 0.5}
                            MDTextField:
                                id: parm_one
                                hint_text: 'Rhythm'
                                helper_text: "low -> medium -> high"
                                icon_right: 'music-note'
                                size_hint_x: None
                                width: 200
                                font_size: 13
                                pos_hint: {'center_x': 0.5}
                            MDTextField:
                                id: parm_two
                                hint_text: 'Pitch'
                                helper_text: "low -> medium -> high"
                                icon_right: 'music-note'
                                size_hint_x: None
                                width: 200
                                font_size: 13
                                pos_hint: {'center_x': 0.5}
                            MDTextField:
                                id: parm_three
                                hint_text: 'Tempo'
                                helper_text: "slow -> fast"
                                icon_right: 'music-note'
                                size_hint_x: None
                                width: 200
                                font_size: 13
                                pos_hint: {'center_x': 0.5}

                            MDRectangleFlatButton:
                                text: 'create'
                                pos_hint: {'center_x': 0.5}
                                on_press: app.createplaylistfu('typed_parm')
                                padding: (20, 10)

                        MDBoxLayout:
                            id: uploadAudio
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: '15dp'
                            MDLabel:
                                padding: (0, 10, 0, 10)
                                halign: 'center'
                                text: 'OR'
                                font_size: 20
                                color: 'white'
                                bold: True
                                size_hint_y: None
                                height: self.texture_size[1]

                            MDTextField:
                                id: playlistnames
                                hint_text: 'playlist name'
                                helper_text: "happy playlist"
                                icon_right: 'account'
                                size_hint_x: None
                                width: 200
                                font_size: 13
                                pos_hint: {'center_x': 0.5}
                                padding: (0, 0, 0, 20)

                            MDRectangleFlatButton:
                                text: 'Upload'
                                size_hint_x: None
                                pos_hint: {'center_x': 0.5}

                                padding: (20, 10)
                            MDRectangleFlatButton:
                                text: 'create'
                                size_hint_x: None
                                pos_hint: {'center_x': 0.5}
                                on_press: app.createplaylistfu('upload')
                                padding: (20, 10)
            Widget:
                size_hint_y: None
                height: '50dp'
        MDBoxLayout:
            size_hint_y: 0.1
            MDBottomNavigation:
                panel_color: .2, .2, .2, 1
                buttom_border_radius: 10
                MDBottomNavigationItem:
                    icon: 'home'
                    on_tab_press: app.root.current = 'Home'
                    text: 'Home'
                MDBottomNavigationItem:
                    icon: 'plus'
                    on_tab_press: app.root.current = 'add'
                    text: 'add song'
                MDBottomNavigationItem:
                    icon: 'music-note'
                    on_tab_press: app.root.current = 'playlist'
                    text: 'playlist'

<AudioName@MDCard>
    md_bg_color: '#222121'
    line_color: .2, .2, .2, .5
    size_hint_y: None
    height: '70dp'
