<AudioPlayer>:
    id: 'audio_player'
    name: 'audio_player'
    orientation: 'vertical'
    MDBoxLayout:
        md_bg_color: '#222121'
        MDBoxLayout:
            MDScrollView:
                MDGridLayout:
                    adaptive_height: True
                    spacing: '20dp'
                    cols: 1
                    MDBoxLayout:
                        adaptive_height: True
                        MDCard:
                            padding: (30, 30, 30, 30)
                            md_bg_color: '#3f5efb'
                            radius: 0, 0, 10, 10
                            size_hint_y: None
                            orientation: 'vertical'
                            height: '280dp'
                            MDLabel:
                                id: playlistname
                                text: 'Happy Playlist'
                                padding: (0, 20, 0, 20)
                                font_size: 10
                                bold: True
                                color: 'white'
                                font_size: 10
                                height: self.texture_size[1]
                            Image: 
                                id: playlistImage
                                source: 'static/happy.png'
                            MDBoxLayout:
                                adaptive_height: True
                                MDSlider:
                                    hint: False
                                MDFloatingActionButton:
                                    icon: 'play'
                                    adaptive_height: True
                                    pos_hint: {'center_x': 0.9, 'center_y': 0.8}
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: (10, 0, 10, 0)
                    MDBoxLayout:
                        id: audioNameBox
                        orientation: 'vertical'
                        adaptive_height: True
                        padding: (20, 0, 20, 0)
                        spacing: '12dp' 
                        MDList:
                            id: audioNameList

                        MDRectangleFlatButton:
                            text: 'playlist'
                            pos_hint: {'center_x': 0.5}
                            on_press: app.root.current = 'playlist'
                            padding: (10, 5)
